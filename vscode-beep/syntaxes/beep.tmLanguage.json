{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Beep",
  "scopeName": "source.beep",
  "patterns": [
    { "include": "#comments" },
    { "include": "#use-statement" },
    { "include": "#mix-into-statement" },
    { "include": "#def-block" },
    { "include": "#struct-block" },
    { "include": "#proto-statement" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#symbols" },
    { "include": "#variables" },
    { "include": "#operators" },
    { "include": "#functions" }
  ],
  "repository": {
    "comments": {
      "name": "comment.line.number-sign.beep",
      "match": "#.*$"
    },
    "use-statement": {
      "patterns": [
        {
          "match": "\\b(use)\\s+([a-zA-Z_][a-zA-Z0-9_/]*)\\s+(as)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.control.import.beep" },
            "2": { "name": "entity.name.module.beep" },
            "3": { "name": "keyword.control.import.beep" },
            "4": { "name": "entity.name.module.alias.beep" }
          }
        },
        {
          "begin": "\\b(use)\\s+([a-zA-Z_][a-zA-Z0-9_/]*)\\s*/\\s*\\[",
          "beginCaptures": {
            "1": { "name": "keyword.control.import.beep" },
            "2": { "name": "entity.name.module.beep" }
          },
          "end": "\\]",
          "patterns": [
            {
              "match": "([a-zA-Z_][a-zA-Z0-9_]*)\\s+(as)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
              "captures": {
                "1": { "name": "variable.other.import.beep" },
                "2": { "name": "keyword.control.import.beep" },
                "3": { "name": "variable.other.import.alias.beep" }
              }
            },
            {
              "name": "variable.other.import.beep",
              "match": "[a-zA-Z_][a-zA-Z0-9_]*"
            },
            {
              "match": ","
            }
          ]
        },
        {
          "match": "\\b(use)\\s+([a-zA-Z_][a-zA-Z0-9_/]*)",
          "captures": {
            "1": { "name": "keyword.control.import.beep" },
            "2": { "name": "entity.name.module.beep" }
          }
        }
      ]
    },
    "def-block": {
      "patterns": [
        {
          "begin": "\\b(def)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*/\\s*([a-zA-Z_][a-zA-Z0-9_]*!?)\\s*(\\([^)]*\\))",
          "beginCaptures": {
            "1": { "name": "keyword.other.def.beep" },
            "2": { "name": "entity.name.type.beep" },
            "3": { "name": "entity.name.function.beep" },
            "4": { "name": "meta.parameters.beep" }
          },
          "end": "\\b(end)\\b",
          "endCaptures": {
            "1": { "name": "keyword.other.def.beep" }
          },
          "patterns": [
            { "include": "$self" }
          ]
        },
        {
          "begin": "\\b(def)\\s+([a-zA-Z_][a-zA-Z0-9_]*!?)\\s*(\\([^)]*\\))",
          "beginCaptures": {
            "1": { "name": "keyword.other.def.beep" },
            "2": { "name": "entity.name.function.beep" },
            "3": { "name": "meta.parameters.beep" }
          },
          "end": "\\b(end)\\b",
          "endCaptures": {
            "1": { "name": "keyword.other.def.beep" }
          },
          "patterns": [
            { "include": "$self" }
          ]
        }
      ]
    },
    "struct-block": {
      "begin": "\\b(struct)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
      "beginCaptures": {
        "1": { "name": "keyword.other.struct.beep" },
        "2": { "name": "entity.name.type.beep" }
      },
      "end": "\\b(end)\\b",
      "endCaptures": {
        "1": { "name": "keyword.other.struct.beep" }
      },
      "patterns": [
        { "include": "#comments" },
        {
          "name": "variable.other.field.beep",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "proto-statement": {
      "match": "\\b(proto)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
      "captures": {
        "1": { "name": "keyword.other.proto.beep" },
        "2": { "name": "entity.name.type.beep" }
      }
    },
    "mix-into-statement": {
      "match": "\\b(mix)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s+(into)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
      "captures": {
        "1": { "name": "keyword.other.mix.beep" },
        "2": { "name": "entity.name.type.beep" },
        "3": { "name": "keyword.other.mix.beep" },
        "4": { "name": "entity.name.type.beep" }
      }
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.beep",
          "match": "\\b(if|then|elif|else|end|for|in|do|and|or)\\b"
        },
        {
          "name": "keyword.other.beep",
          "match": "\\b(let)\\b"
        },
        {
          "name": "variable.language.this.beep",
          "match": "\\bthis\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.single.beep",
      "begin": "'",
      "end": "'",
      "patterns": [
        {
          "name": "constant.character.escape.beep",
          "match": "\\\\."
        }
      ]
    },
    "numbers": {
      "name": "constant.numeric.beep",
      "match": "\\b[0-9]+\\b"
    },
    "symbols": {
      "name": "constant.other.symbol.beep",
      "match": ":[a-zA-Z_][a-zA-Z0-9_]*"
    },
    "variables": {
      "patterns": [
        {
          "name": "string.regexp.beep",
          "match": "\\$[a-zA-Z_][a-zA-Z0-9_]*"
        },
        {
          "name": "variable.parameter.beep",
          "match": "@[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.beep",
          "match": "==|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.arithmetic.beep",
          "match": "\\+|-|\\*|%"
        },
        {
          "name": "keyword.operator.assignment.beep",
          "match": "="
        },
        {
          "name": "keyword.operator.range.beep",
          "match": "\\.\\.\\.?=?"
        },
        {
          "name": "punctuation.accessor.beep",
          "match": "\\."
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.beep",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*!?)(?=\\s*\\()"
        }
      ]
    }
  }
}
