{
  "comments": {
    "lineComment": "#"
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "'", "close": "'", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "'", "close": "'" }
  ],
  "folding": {
    "markers": {
      "start": "^\\s*(def|struct|if|for|while|do|case)\\b",
      "end": "^\\s*end\\b"
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(def|struct|if|elif|else|for|while|do|case)\\b.*$|=>\\s*do\\s*$",
    "decreaseIndentPattern": "^\\s*(end|elif|else)\\b"
  },
  "wordPattern": "[a-zA-Z_][a-zA-Z0-9_]*!?"
}
